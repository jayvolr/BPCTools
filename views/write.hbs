<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>BPCTools</title>
  </head>
  <body>
    <!-- Include stylesheet -->
    <link href="https://cdn.quilljs.com/1.3.4/quill.snow.css" rel="stylesheet">

    <!-- Create the editor container -->
    <div id="editor">
    </div>

    <div id="settingContainer">
      <div id="docFormContainer">
        <button id="exitSettings"><i class="icon-close"></i></button>
        <form id="docForm" action="/write" method="post" enctype="multipart/form-data">
          <input id="postInput" type="hidden" name="post"><br><br>
          <input type="text" name="title" placeholder="Title" required><br><br>
          <textarea name="featuredText" rows="8" cols="59" placeholder="Featured Text" required></textarea><br>
           <span id="charCount">Characters: <span class="red">0/400</span></span><br><br>
          <label for="image">Featured image:</label>
          <input type="file" name="image" required><br><br>
          <button class="button" id="writeSubmit">OK</button>
        </form>
      </div>
    </div>

    <button class="button" id="publishButton">Publish</button>

    <!-- Include the Quill library -->
    <script src="https://cdn.quilljs.com/1.3.4/quill.js"></script>

    <!-- Initialize Quill editor -->
    <script>
      var quill = new Quill('#editor', {
        theme: 'snow',
        modules: {
          toolbar: [
            [{ 'header': [1, 2, 3, 4, 5, 6, false] }],
            ['bold', 'italic', 'underline', 'strike'],
            ['blockquote'],
            [{ 'align': [] }],
            ['clean'],
            ['image', 'video', 'link'],

            [{ 'list': 'ordered'}, { 'list': 'bullet' }],
            [{ 'script': 'sub'}, { 'script': 'super' }],
            [{ 'indent': '-1'}, { 'indent': '+1' }],
            [{ 'direction': 'rtl' }],

            [{ 'color': [] }, { 'background': [] }]
          ]
        }
      });
    </script>
  </body>
  <style media="screen">
    body {
      height: 100vh;
      width: 100vw;
      position: absolute;
      overflow: hidden;
    }
  </style>
  <link href="fontello.css" rel="stylesheet">
  <link rel="stylesheet" href="master.css">
  <script src='write.js'></script>
</html>
