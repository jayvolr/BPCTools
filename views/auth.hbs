<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>BPC Tools</title>
  </head>
  <body>
    {{#if info}}
      <div id="infoRibbon" class="ribbon">{{info}}</div>
    {{/if}}
    {{#if error}}
      <div id="errorRibbon" class="ribbon">{{error}}</div>
    {{/if}}
    <div id="loginContainer">
      <form action="/auth" method="post">
        <input type="password" name="password" placeholder="Enter password">
        <button type="submit">Login</button>
      </form>
    </div>
  </body>
  <link rel="stylesheet" href="master.css">
  <script src='master.js'></script>
  <style media="screen">
    body {
      margin: 0;
      background: black;
    }

    #loginContainer {
      width: 100vw;
      height: 100vh;
      text-align: center;
    }

    #loginContainer form {
      position: relative;
      top: 40vh;
    }

    #loginContainer input {
      width: 30%;
      padding: 6px;
    }

    #loginContainer button {
      width: 100px;
      padding: 6px;
    }
  </style>
</html>
